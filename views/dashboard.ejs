  })
})




$('.update-status').click(function () {
  let status = $(this).attr('status');
  let id = $(this).attr('id');

  if (status == 'Dispatched') {
    let awb = prompt("Enter Tracking Link:");
    if (awb) {
      $.getJSON('/admin/update-status', { id, status, awb }, data => {
        window.location.reload();
      });
    } else {
      alert("Tracking Link is required to proceed.");
    }
  } else {
    var r = confirm("Are you sure you want to change status?");
    if (r == true) {
      $.getJSON('/admin/update-status', { id, status }, data => {
        window.location.reload();
      });
    }
  }
});


