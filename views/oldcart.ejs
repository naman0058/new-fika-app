    <section class="whish-list-section section-mb">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h3 class="title mb-5 pb-3 text-capitalize">Your cart items</h3>


                    <% if(!result[0]) { %>
						<div class="col-lg-4"></div>
						<div class="col-lg-4">
							<img src='/images/emptycart.png' style="text-align: center;justify-content: center;">

						</div>
						<div class="col-lg-4"></div>
            
						<% } else { %>

                    <div class="table-responsive">
                        <table class="table">
                            <thead class="thead-light">




                                <tr>
                                    <th class="text-center" scope="col">Product Image</th>
                                    <th class="text-center" scope="col">Product Name</th>
                                    <th class="text-center" scope="col">Product Price</th>
                                    <th class="text-center" scope="col">Qty</th>
                                    <th class="text-center" scope="col">Price</th>
                                    <th class="text-center" scope="col">action</th>
                                   
                                </tr>
                            </thead>
                            <tbody>



                                <% for(i=0;i<result[1].length;i++) { %>


                                <tr>
                                    <th class="text-center" scope="row">
                                        <img src="/images/<%=result[1][i].bookingimage%>" alt="img" style="height: 100px;">
                                    </th>
                                    <td class="text-center">
                                        <span class="whish-title"><%=result[1][i].bookingname%></span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-success">Rs. <%=result[1][i].oneprice%></span>
                                    </td>
                                    <td class="text-center">
                                        <div class="product-count style">
                                            <div class="count d-flex justify-content-center">
                                                <input type="number" min="1" max="100" step="1" value="<%=result[1][i].quantity%>">
                                                <div class="button-group">
                                                    <button class="count-btn increment">
                                                        <span class="las la-angle-up add" categoryid="<%=result[1][i].categoryid%>" booking_id = "<%=result[1][i].booking_id%>" number="<%=result[1][i].number%>" availablequantity="<%=result[1][i].availablequantity%>"  value="<%=result[1][i].quantity%>" price="<%=result[1][i].oneprice%>"></span>
                                                    </button>
                                                    <button class="count-btn decrement">
                                                        <span class="las la-angle-down minus" categoryid="<%=result[1][i].categoryid%>" availablequantity="<%=result[1][i].availablequantity%>" booking_id = "<%=result[1][i].booking_id%>" number="<%=result[1][i].number%>" value="<%=result[1][i].quantity%>" price="<%=result[1][i].oneprice%>"></span></span>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </td>


                                    <td class="text-center">
                                        <span class="whish-list-price"> Rs. <%=result[1][i].price%> </span>
                                    </td>

                                    <td class="text-center">
                                        <a href="/delete?id=<%=result[1][i].id%>">
                                            <span class="trash"><i class="ion-android-delete"></i> </span></a>
                                    </td>
                                  
                                </tr>
                               

<% } %>

                            </tbody>
                        </table>
                    </div>


                    <% } %>
                </div>
            </div>
        </div>
    </section>


