              </div>
            </div>
          </div>



          <form id="paymentForm" action="/order-now" method="POST" style="display: none;">
            <input type="hidden" name="first_name" value="<%=result[8][0].firstname%>">
            <input type="hidden" name="address" value="<%=result[8][0].address%>">
            <input type="hidden" name="city" value=" <%=result[8][0].city%>">
            <input type="hidden" name="pincode" value="<%=result[8][0].pincode%>">
            <input type="hidden" name="last_name" value="<%=result[8][0].lastname%>">
            <input type="hidden" name="state" value="<%=result[8][0].state%>">
            <input type="hidden" name="email" value="<%=result[8][0].email%>">
            <input type="hidden" name="number" value="<%=result[8][0].usernumber%>">
            <input type="hidden" name="payment_mode" id="payment_mode">
            <input type="hidden" name="total_amount" value="<%=cartData.totalPrice%>">
            <!-- <input type="hidden" name="total_amount" value="1"> -->



          </form>
          
          <script>
            function submitForm() {
              let selectedPayment = document.querySelector('input[name="payment_mode"]:checked').value;
        document.getElementById('payment_mode').value = selectedPayment;
        document.getElementById('paymentForm').submit();
            }
          </script>


