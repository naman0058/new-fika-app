                <div class="media-left">
                  <a href="/product?id=<%=result[1][i].booking_id%>" title="<%=result[1][i].name%>">
                    <img class="media-object" src="/images/<%=result[1][i].bookingimage%>" alt="<%=result[1][i].name%>">
